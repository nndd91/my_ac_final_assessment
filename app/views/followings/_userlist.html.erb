<div class="panel panel-default">
  <div class="panel-heading">
    Users
  </div>
  <div class="panel-body">
    <table class="table">
      <tr>
        <th>
          Username
        </th>
        <th>
          Last Active
        </th>
        <th>
          Actions
        </th>
      </tr>
      <% userlist.each do |user| %>
        <tr>
          <td>
            <%= user.username %>
          </td>
          <td>
            <%= user.current_sign_in_at %>
          </td>
          <td>
            <% if current_user.following?(user) %>
              <%= link_to 'Unfollow', following_path(id: user), method: :delete, class: 'btn btn-danger btn-xs' %>
            <% else %>
              <%= link_to 'Follow', followings_path(id: user), method: :post, class: 'btn btn-success btn-xs' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
